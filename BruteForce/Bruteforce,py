import itertools
import string
import time

def brute_force_password(length, target_password):
    """Brute force a password of given length"""
    chars = string.ascii_letters + string.digits + string.punctuation
    attempts = 0
    
    for guess in itertools.product(chars, repeat=length):
        attempts += 1
        current_guess = ''.join(guess)
        
        if current_guess == target_password:
            return current_guess, attempts
    
    return None, attempts

# Example usage
target = "abc"
result, attempts = brute_force_password(len(target), target)
print(f"Password found: {result} in {attempts} attempts")